<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.filmarks.app.filmarks.fragments.C3_S_List">



    <!--これを記述すればボタンの反応みたいなのを追加できる-->
    <!--android:clickable="true"-->
    <!--android:foreground="?android:attr/selectableItemBackground"-->

    <ScrollView
        android:id="@+id/c3_list_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/include_header"
        android:layout_above="@+id/include_footer"
        >

        <LinearLayout
            android:id="@+id/c3_linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="32dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.filmarks.app.filmarks.definition.ExpandableHeightListView
                    android:id="@+id/listSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"/>

                <include layout="@layout/row_header" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd">
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="映画が見つからない場合は、\n下のボタンでご報告ください。\n１週間前後で登録させて頂きます。"
                android:id="@+id/textView21"
                android:maxLines="3"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="未登録映画を報告する"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#0aa"
                android:textColor="#fff"
                android:layout_marginTop="200dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
